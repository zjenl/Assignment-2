{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "Container",
    "height": 600,
    "title": "Happiness Index vs Economy Status by Country (2023)",
    "data": {
      "url": "https://raw.githubusercontent.com/zjenl/Assignment-2/main/data/world_happiness_2023.csv"
    },
    "params": [
      {
        "name": "Score_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 110000,
          "step": 100,
          "name": "Minimum GDP/Capita: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum['Unemployment rate'] > 0"},
      {"filter": "datum['GDP per Capita'] > Score_Above"},
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "Unemployment rate",
        "type": "quantitative",
        "title": "Unemployment Rate",
        "axis": {"tickCount": 5},
        "scale": {"type": "linear", "domain": [0, 0.3]}
      },
      "y": {
        "field": "Happiness",
        "type": "quantitative",
        "title": "Happiness Index",
        "axis": {"tickCount": 5},
        "scale": {"type": "linear", "domain": [0, 10]}
      }
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
          }
        },
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "GDP per Capita",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [500, 5000, 20000, 50000, 100000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": "$.1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.6},
            "value": 0.2
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "GDP per Capita", "type": "quantitative", "format": "$,"},
            {"field": "CPI", "type": "quantitative", "format": ","},
            {"field": "Minimum wage", "type": "quantitative", "title": "Minimum Wage/hr", "format": "$,"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States of America'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "GDP per Capita", "type": "quantitative", "format": "$,"},
            {"field": "CPI", "type": "quantitative", "format": ","},
            {"field": "Minimum wage", "type": "quantitative", "title": "Minimum Wage/hr", "format": "$,"}
          ]
        }
      }
    ],
    "config": {
      "view": {
        "stroke": null
      },
      "axis": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "legend": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "header": {
        "labelFont": "Oxygen",
        "titleFont": "Oxygen"
      },
      "title": {
        "font": "Oxygen",
        "fontSize": 16,
        "fontWeight": 600
      }
    }
  }
